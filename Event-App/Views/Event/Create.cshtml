@model Event_App.Models.CreateEventViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Host</h1>

<h4>an Event on Happnin</h4>
<hr />
<div class="=container">
    <form asp-action="Create">
        <div class="row">
            <div class="col-sm-6">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CurrentPerson.IdentityUserId" />
                <input type="hidden" asp-for="CurrentPerson.PersonId" />

                <div class="form-group">
                    <label asp-for="NewEvent.EventName" class="control-label"></label>
                    <input asp-for="NewEvent.EventName" class="form-control" />
                    <span asp-validation-for="NewEvent.EventName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewEvent.InterestId" class="control-label"> Interest </label>
                    <select asp-for="NewEvent.InterestId" class="form-control" asp-items='new SelectList(Model.Interests, "InterestId", "InterestType")'></select>
                    <span asp-validation-for="NewEvent.InterestId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewEvent.EventDate" class="control-label"></label>
                    <input asp-for="NewEvent.EventDate" class="form-control" />
                    <span asp-validation-for="NewEvent.EventDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewEvent.EventDescription" class="control-label"></label>
                    <input asp-for="NewEvent.EventDescription" class="form-control" />
                    <span asp-validation-for="NewEvent.EventDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewEvent.EventUrl" class="control-label"></label>
                    <input asp-for="NewEvent.EventUrl" class="form-control" />
                    <span asp-validation-for="NewEvent.EventUrl" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="NewEvent.IsPrivate" /> @Html.DisplayNameFor(model => model.NewEvent.IsPrivate)
                    </label>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="NewEvent.IsVirtual" /> @Html.DisplayNameFor(model => model.NewEvent.IsVirtual)
                    </label>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Venue.Venue" class="control-label">Venue Name</label>
                    <input asp-for="Venue.Venue" class="form-control" />
                    <span asp-validation-for="Venue.Venue" class="text-danger"></span>
                   
                </div>
                <div class="form-group">
                    <label asp-for="Venue.Street" class="control-label"></label>
                    <input asp-for="Venue.Street" class="form-control" />
                    <span asp-validation-for="Venue.Street" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Venue.City" class="control-label"></label>
                    <input asp-for="Venue.City" class="form-control" />
                    <span asp-validation-for="Venue.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Venue.State" class="control-label"></label>
                    <input asp-for="Venue.State" class="form-control" />
                    <span asp-validation-for="Venue.State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Venue.ZipCode" class="control-label"></label>
                    <input asp-for="Venue.ZipCode" class="form-control" />
                    <span asp-validation-for="Venue.ZipCode" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>

        </div>
    </form>

    
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
